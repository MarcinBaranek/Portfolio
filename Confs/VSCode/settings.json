{
    "editor.renderWhitespace": "all",
    "terminal.integrated.tabs.enabled": true,
    "files.autoSave": "onWindowChange",
    "editor.rulers": [79],
    "workbench.colorCustomizations": {
        "editorLineNumber.foreground": "#a35c2a93",
        "editorLineNumber.activeForeground": "#e18c4f",
    },

    // GOLANG CONFIGURATION
    "go.useLanguageServer": true,
    "gopls": {
        "usePlaceholders": true, // add parameter placeholders when completing a function
        "completionDocumentation": true, // for documentation in completion items
        "staticcheck": true,
        "ui.semanticTokens": true,
        "formatting.gofumpt": true
    },
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },
    "go.toolsManagement.autoUpdate": true,
    "workbench.colorTheme": "JetBrains Darcula Theme"   // Extension JetBrains Darcula Theme
}

